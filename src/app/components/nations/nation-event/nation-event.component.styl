.event-details

  .event-info
    padding-left 5px

    .event-name
      margin-bottom 3px

  .event-image
    box-sizing border-box
    position relative
    padding-top 8px
    width 50px
    height 50px
    border-radius 50px
    background-repeat no-repeat
    background-size cover
    background-position center
    text-align center
    text-shadow 0px 0px 3px rgba(50, 50, 50, 1)
    font-weight 500
    color white

    .event-time
      text-transform uppercase
