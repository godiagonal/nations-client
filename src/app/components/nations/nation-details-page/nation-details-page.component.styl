#loading-modal
  display none

  &.show
    display table !important

.nation-photos
  width 100%
  height 250px

  &.placeholder
    height 200px

  .nation-photo
    background-size cover
    background-repeat no-repeat
    background-position center

    .nation-photo-placeholder
      font-size 17px
      margin-top 100px
      color white
      text-shadow 0px 0px 3px rgba(50, 50, 50, 1)
      text-align center

.nation-events

  .nation-event-list
    background-color #fff

    li
      border-bottom 1px solid #ddd

      &:first-child
        border-top 1px solid #ddd
