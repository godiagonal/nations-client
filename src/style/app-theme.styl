@import 'components'

// Global

ul
  margin 0px
  padding 0px
  list-style none

// Onsen UI

.back-button
  padding-left 0px

.page
  font-size 14px

.page__content.no-status-bar-fill
  top 0px !important

.navigation-bar--transparent
  text-shadow 0px 0px 3px rgba(50, 50, 50, 1)

// Custom

.nation-status-full
  border-left-color $nation-status-full-color !important

.nation-status-almost-full
  border-left-color $nation-status-almost-full-color !important

.nation-status-ok
  border-left-color $nation-status-ok-color !important

.sub-text
  color $sub-text-color

