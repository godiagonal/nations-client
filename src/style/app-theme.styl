@import 'components'

// Global

a
  text-decoration none
  color $highlight-color
  font-weight 400

  &:hover
    text-decoration underline

strong
  font-weight 500

ul
  margin 0px
  padding 0px
  list-style none

// Onsen UI

.back-button
  padding-left 0px

.page
  font-size 13px

.page__content.no-status-bar-fill
  top 0px !important

.navigation-bar--transparent
  text-shadow 0px 0px 3px rgba(50, 50, 50, 1)

// Custom

.nation-status-open
  border-left-color $nation-status-open-color !important

  .status-text
    color $nation-status-open-color

.nation-status-open-crowded
  border-left-color $nation-status-open-crowded-color !important

  .status-text
    color $nation-status-open-crowded-color

.nation-status-open-later
  border-left-color $nation-status-open-later-color !important

  .status-text
    color $nation-status-open-later-color

.nation-status-closed
  border-left-color $nation-status-closed-color !important

  .status-text
    color $nation-status-closed-color

.block
  box-sizing border-box
  width 100%
  padding 15px 18px 15px 18px
  background-color #fff

  &.transparent
    background-color transparent

.title-text
  margin-bottom 10px
  font-size 15px
  font-weight 500
  color $title-text-color

.sub-text
  color $sub-text-color

